[
    // navigation
    {
        "key": "ctrl-h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl-l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "ctrl-k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "ctrl-j",
        "command": "workbench.action.navigateDown"
    },
    // coding 
    {
        "key": "space c a",
        "command": "editor.action.codeAction",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "shift-k",
        "command": "editor.action.showHover",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space r n",
        "command": "editor.action.rename",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    // file explorer
    {
        "key": "space e",
        "command": "voil.openPanelCurrentDir",
        "when": "!voilDoc && (vim.mode == 'Normal' || !editorFocus) && !sideBarFocus && !inSettingsEditor"
    },
    {
        "key": "q",
        "command": "voil.close",
        "when": "voilDoc && vim.mode == 'Normal' && editorTextFocus"
    },
    // lazygit
    {
        "key": "space l g",
        "command": "lazygit-vscode.toggle",
        "when": "(vim.mode == 'Normal' || !editorFocus) && !sideBarFocus && !inSettingsEditor"
    },
    // harpoon
    {
        "key": "space h",
        "command": "vscode-harpoon.addEditor",
        "when": "(vim.mode == 'Normal' || !editorFocus) && !sideBarFocus && !inSettingsEditor"
    },
    {
        "key": "ctrl+e",
        "command": "vscode-harpoon.editorQuickPick",
        "when": "(vim.mode == 'Normal' || !editorFocus) && !sideBarFocus && !inSettingsEditor"
    },
    // telescope
    {
        "key": "space f f",
        "command": "workbench.action.quickOpen",
        "when": "(vim.mode == 'Normal' || !editorFocus) && !sideBarFocus && !inSettingsEditor"
    },
    {
        "key": "space f g",
        "command": "workbench.action.quickTextSearch",
        "when": "(vim.mode == 'Normal' || !editorFocus) && !sideBarFocus && !inSettingsEditor"
    },
    // cycle through options
    {
        "key": "ctrl+y",
        "command": "acceptSelectedSuggestion",
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
]